<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/surface_view_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/surface_view_button_text"
        app:layout_constraintBottom_toTopOf="@id/texture_view_button"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/texture_view_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/texture_view_button_text"
        app:layout_constraintBottom_toTopOf="@id/screenshot_button"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/surface_view_button" />

    <Button
        android:id="@+id/screenshot_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/screenshot_button_text"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/texture_view_button" />

</androidx.constraintlayout.widget.ConstraintLayout>
